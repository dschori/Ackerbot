<?xml version="1.0"?>
<launch>
  <arg name="world_name" default="carollo_track_v1" />
  <arg name="gui" default="true" />
  <arg name="run_camera" default="true"/>
  <arg name="x" default="0"/>
  <arg name="y" default="0"/>
  <arg name="z" default="0.08"/>
  <arg name="Y" default="0"/>
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
  <!--
    <arg name="world_name" value="$(find selfie_gazebo)/worlds/$(arg world_name).world"/>
    -->
    <arg name="world_name" value="$(find sim_pkg)/worlds/demo_track.world"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="paused" value="false"/>
  </include>


  <!-- urdf xml robot description loaded on the Parameter Server, converting the xacro into a proper urdf file-->
  <param name="robot_description" command="$(find xacro)/xacro '$(find sim_pkg)/urdf/weed_bot.xacro'" />

  <!-- push robot_description to factory and spawn robot in gazebo -->
  <node name="selfie_spawn" pkg="gazebo_ros" type="spawn_model" output="screen" args="-urdf -param robot_description -model selfie -x $(arg x) -y $(arg y) -z $(arg z)"/>

  <!-- ros_sim_control selfie launch file -->
  <include file="$(find sim_pkg)/launch/selfie_sim_control.launch" ns="/"/>


  <!-- Publish "better odom" topic that is normally generated by the particle filter
    <node name="better_odom" pkg="topic_tools" type="relay"
          args="/vesc/odom /pf/pose/odom"/>
-->
</launch>